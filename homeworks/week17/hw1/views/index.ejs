<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link type="text/css" rel="stylesheet" href="style.css">
  <title>W17 Blog</title>
</head>
<body>

  <header>
    <a class="logo" href="/">Blog</a>
    <nav>
      <a href="page?page=About">About</a>
      <a href="page?page=List">Articles</a>
      <a href="page?page=Front-end">Front-end</a>
      <a href="page?page=Back-end">Back-end</a>
      <a href="page?page=Others">Others</a>
    </nav>
  </header>

  <section>
    <div class="admin-btn">
    <% if (!username) { %>
      <a class="create-btn" href="/login">Login</a>
      <% } else { %>
        <% if (role == 'admin') { %> 
          <a class="create-btn" href="/create">New Post</a>
          <a class="create-btn" href="/admin">Admin</a>
        <% } %> 
      <a class="create-btn" href="/logout">Logout</a>
    <% } %>
    </div>
    

    <div class="page">Recent</div>

    
      <% articles.forEach(article => { %> 

        <a href="/article/<%= article.id %> ">
         
          <div class="card">
            <img class="card-img" src="https://picsum.photos/250/250/?random=<%= article.id %> ">
            <div class="card-info">
              <div class="card-title"><%= article.title %></div>
              <div class="card-time"><%= moment(article.createdAt).format('YYYY-MM-DD hh:mm') %></div>
              <div class="card-category">
                <div><a class="category-btn" href="page?page=<%= article.category %> "><%= article.category %></a></div>
              </div>
              <div class="card-desc"><%= article.content %></div>
            </div>

            
            <div class="card-admin-btn">
              <a id="read-btn" class="delete-btn" href="/article/<%= article.id %> ">Read</a>
              <% if (role === 'admin') { %> 
                <a class="delete-btn" href="/update/<%= article.id %>">Edit</a>
                <a class="delete-btn" href="/delete/<%= article.id %>">Delete</a>
              <% } %> 
            </div>
          </div>
        </a>
      <% }) %> 
    
  </section>
  
  <footer>Copyright Â© 2020 B612</footer>

</body>
</html>